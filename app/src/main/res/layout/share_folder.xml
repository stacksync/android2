<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Members:"
        android:id="@+id/share_labelMembers"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp" />

    <ListView
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/share_labelMembers"
        android:layout_alignLeft="@+id/share_labelMembers"
        android:layout_alignStart="@+id/share_labelMembers"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="70dp"
        android:id="@+id/share_listMembers"></ListView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Invite people:"
        android:id="@+id/share_labelInvite"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/share_listMembers"
        android:layout_alignLeft="@+id/share_listMembers"
        android:layout_alignStart="@+id/share_listMembers" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/share_textEmail"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/share_labelInvite"
        android:layout_alignLeft="@+id/share_labelInvite"
        android:layout_alignStart="@+id/share_labelInvite" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/btnSend"
        android:layout_alignTop="@+id/share_textEmail"
        android:layout_toRightOf="@+id/share_textEmail"
        android:layout_marginLeft="10dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Close"
        android:id="@+id/btnClose"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onCloseClick"/>


</RelativeLayout>